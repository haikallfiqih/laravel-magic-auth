{
    "name": "haikallfiqih/laravel-magic-auth",
    "description": "A secure passwordless authentication package using magic links",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LaravelLinkAuth\\MagicAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelLinkAuth\\MagicAuth\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Haikal Fiqih",
            "email": "withhaikal@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.0|^9.0|^10.0|^11.0",
        "laravel-notification-channels/whatsapp": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.0|^10.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "twilio/sdk": "Required for Twilio WhatsApp integration",
        "guzzlehttp/guzzle": "Required for custom WhatsApp providers"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "extra": {
        "laravel": {
            "providers": [
                "LaravelLinkAuth\\MagicAuth\\MagicAuthServiceProvider"
            ],
            "aliases": {
                "MagicAuth": "LaravelLinkAuth\\MagicAuth\\Facades\\MagicAuth"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
